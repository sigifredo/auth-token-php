<?php

if ($this->form)
{
    $form = $this->form;
    $form->prepare();

    $form->setAttribute('action', $this->basePath('/page/auth/login'));
    $form->setAttribute('method', 'post');

    echo $this->form()->openTag($form);
    echo $this->formcollection($form);
    echo $this->form()->closeTag();
}

if ($this->message)
    echo $this->message;
